@model IEnumerable<DataAccessLayer.Models.ViewModel.AdsViewModel>
<div class="tab-pane fade active show" id="liton_product_grid">
    <div class="ltn__product-tab-content-inner ltn__product-grid-view">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-6 col-sm-6 col-12">
                    <div class="ltn__product-item ltn__product-item-4 ltn__product-item-5 text-center---">
                        <div class="product-img">
                            <a href="product-details.html"><img src="~/Content/assets/img/product-3/1.jpg" alt="#"></a>
                            <div class="real-estate-agent">
                                <div class="agent-img">
                                    <a href="team-details.html"><img src="@item.UserAvt" alt="@item.UserFullname"></a>
                                </div>
                            </div>
                        </div>
                        <div class="product-info">
                            <div class="product-badge">
                                <ul>
                                    <li class="sale-badg">For Sell</li>
                                </ul>
                            </div>
                            @if (item.Priority == 1)
                            {
                                <h2 class="product-title" style="text-transform: uppercase; color:  purple;"><a href="product-details.html">@item.Title</a></h2>
                            }
                            else if (item.Priority == 2)
                            {
                                <h2 class="product-title" style="text-transform: uppercase; color:  orange;"><a href="product-details.html">@item.Title</a></h2>
                            }
                            else if (item.Priority == 3)
                            {
                                <h2 class="product-title" style="text-transform: lowercase; color:  black;"><a href="product-details.html">@item.Title</a></h2>
                            }
                            <div class="product-img-location">
                                <ul>
                                    <li>
                                        <a href="locations.html"><i class="flaticon-pin"></i> @item.Country, @item.City</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="product-hover-action">
                                <ul>
                                    <li>
                                        <a href="#" title="Quick View" data-toggle="modal" data-target="#modal-ads" onclick="GetAds(@item.Id)">
                                            <i class="flaticon-expand"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AdsDetail", "Sell", new { id = item.Id })" title="Ads Details">
                                            <i class="flaticon-add"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="product-info-bottom">
                            <div class="product-price">
                                <span>@item.Price @item.UnitPrice<label></label></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="tab-pane fade" id="liton_product_list">
    <div class="ltn__product-tab-content-inner ltn__product-list-view">
        <div class="row">
            <div class="col-lg-12">
                <!-- Search Widget -->
                <div class="ltn__search-widget mb-30">
                    <form action="#">
                        <input type="text" name="search" placeholder="Search your keyword...">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-12">
                    <div class="ltn__product-item ltn__product-item-4 ltn__product-item-5">
                        <div class="product-img">
                            <a href="product-details.html"><img src="img/product-3/1.jpg" alt="#"></a>
                        </div>
                        <div class="product-info">
                            <div class="product-badge-price">
                                <div class="product-badge">
                                    <ul>
                                        <li class="sale-badg">For Sell</li>
                                    </ul>
                                </div>
                                <div class="product-price">
                                    <span>@item.Price @item.UnitPrice</span>
                                </div>
                            </div>
                            @if (item.Priority == 1)
                            {
                                <h2 class="product-title" style="text-transform: uppercase; color:  purple;"><a href="product-details.html">@item.Title</a></h2>
                            }
                            else if (item.Priority == 2)
                            {
                                <h2 class="product-title" style="text-transform: uppercase; color:  orange;"><a href="product-details.html">@item.Title</a></h2>
                            }
                            else if (item.Priority == 3)
                            {
                                <h2 class="product-title" style="text-transform: lowercase; color:  black;"><a href="product-details.html">@item.Title</a></h2>
                            }
                            <div class="product-img-location">
                                <ul>
                                    <li>
                                        <a href="locations.html"><i class="flaticon-pin"></i> @item.Country, @item.City</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="product-info-bottom">
                            <div class="real-estate-agent">
                                <div class="agent-img">
                                    <a href="team-details.html"><img src="@item.UserAvt" alt="@item.UserFullname"></a>
                                </div>
                                <div class="agent-brief">
                                    <h6><a href="team-details.html">@item.UserFullname</a></h6>
                                </div>
                            </div>
                            <div class="product-hover-action">
                                <ul>
                                    <li>
                                        <a href="#" title="Quick View" data-toggle="modal" data-target="#modal-ads" onclick="GetAds(@item.Id)">
                                            <i class="flaticon-expand"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AdsDetail", "Sell", new { id = item.Id })" title="Ads Details">
                                            <i class="flaticon-add"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (ViewBag.totalPage > 0)
{
    <div class="ltn__pagination-area text-center">
        <div class="ltn__pagination">
            <ul>

                @for (int i = 1; i <= ViewBag.totalPage; i++)
                {
                    if (i == ViewBag.currentPage)
                    {
                        <li class="active"><a href="javascript:void(0)" onclick="Paginate(@i)">@i</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:void(0)" onclick="Paginate(@i)">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
}

<input type="hidden" value="@ViewBag.countAds" id="count-ads" />


