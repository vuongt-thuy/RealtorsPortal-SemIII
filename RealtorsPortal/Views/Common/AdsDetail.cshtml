@section scripts {
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        var formContactValidation = $("#formContact").validate({
            submitHandler: function () {
                event.preventDefault()
                var contact = {
                    Name: $("#Name").val(),
                    Email: $("#Email").val(),
                    AdsId: $("#AdsId").val(),
                    Phone: $("#Phone").val(),
                    Message: $("#Message").val(),
                }
                $.ajax({
                    type: "POST",
                    url: "/Sell/Contact",
                    data: { contact: contact },
                    success: function (res) {
                        if (res.statusCode == 200) {
                            toastr.success(res.msg)
                            ResetFormContact()
                        } else if (res.statusCode == 201) {
                            formContactValidation.showErrors(res.data)
                        }
                    }
                })
            }
        })

        function ResetFormContact() {
            $("#Name").val("")
            $("#Email").val("")
            $("#Phone").val("")
            $("#Message").val("")
        }
    </script>
