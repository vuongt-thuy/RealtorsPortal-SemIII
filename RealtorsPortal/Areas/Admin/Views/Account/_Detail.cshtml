@model DataAccessLayer.Models.Entities.User


<div class="col-12">
    <div class="row">
        <div class="col-6">
            <strong><i class="fas fa-user mr-1"></i> Fullanme</strong>

            <p class="text-muted">
                @Model.Fullname
            </p>
        </div>

        <div class="col-lg-6">
            <strong><i class="far fa-images"></i> Avatar</strong>

            <p class="text-muted">
                @if (Model.Avt != null)
                {
                    <img src="@Model.Avt" alt="@Model.Fullname" width="150" height="180" />
                }
            </p>
        </div>

        <div class="col-6">
            <strong><i class="fas fa-user mr-1"></i> Username</strong>

            <p class="text-muted">
                @Model.Username
            </p>
        </div>

        <div class="col-6">
            <strong><i class="fas fa-envelope"></i> Email</strong>

            <p class="text-muted">
                @Model.Email
            </p>
        </div>

        <div class="col-6">
            <strong><i class="fas fa-phone mr-1"></i> Phone</strong>

            <p class="text-muted">
                @Model.Phone
            </p>
        </div>
        <div class="col-6">
            <strong><i class="fas fa-birthday-cake mr-1"></i> Birthday</strong>

            <p class="text-muted">
                @String.Format("{0: MM/dd/yyyy}", @Model.Birthday)
            </p>
        </div>
        <div class="col-6">
            <strong><i class="fas fa-building mr-1"></i> Company</strong>

            <p class="text-muted">
                @Model.Company
            </p>
        </div>
        <div class="col-6">
            <strong><i class="fas fa-user-tag mr-1"></i> Role</strong>

            <p class="text-muted">
                Role name
                @*@Model.UserRole.Name*@
            </p>
        </div>
        <div class="col-6">
            <strong><i class="fas fa-user-check"></i> Active</strong>

            <p class="text-muted">
                @if (Model.Active)
                {
                    <span class="badge bg-success">On</span>
                }
                else
                {
                    <span class="badge bg-danger">Off</span>
                }
            </p>
        </div>
        <div class="col-6">
            <strong><i class="fas fa-calendar"></i> Created At</strong>

            <p class="text-muted">
                @Model.CreatedAt
            </p>
        </div>
    </div>
</div>